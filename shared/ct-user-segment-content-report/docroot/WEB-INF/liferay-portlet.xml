<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>ct-user-segment-content-report</portlet-name>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.contenttargeting.reports.usersegmentcontent.messaging.CheckUserSegmentContentReportMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>user.segment.content.report.check.interval</property-key>
					<time-unit>hour</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
	</portlet>
</liferay-portlet-app>